<h1>Edit Selected Species</h1>
<% if @species.errors.any? %>
  <h3>Please Fix These Errors:</h3>
<% end %>

<ul>
  <% @species.errors.full_messages.each do |message| %>
  <li><%= message %></li>
</ul>

<% end %>

<form action="/species/<%= @species.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="species_name">Species</label>
  <input id="species_name" name="name" type="text" value="<%= @species.name %>">
  <button>Update Species</button>
</form>
